#<?cfg paf dictionary ?>
target: types
definitions: {
    bool_set_count: {
        type: bool
        description: "a boolean with both a max allowed 
                      and a list of permitted values"
        maxOccurs: 1
        allowed: { value: true }
        default: true
    }

    int_range_count: {
        type: int
        minOccurs: 2
        allowed: {
            min: -10
            max: -3
        }
        default: -5 -7 -6
    }

    deep: {
        type: Policy
        description: "a simple sub-policy"
        dictionary: {
            definitions: {
                sub_double: {
                    type: double
                    description: "a double with default value 1"
                    default: 1.
                }
            }
        }
    }

    indirect: {
        type: Policy
        dictionaryFile: defaults_dictionary_indirect.paf
    }

    # a value will need to be supplied here
    required: {
        minOccurs: 1
    }
}
